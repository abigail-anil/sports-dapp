<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NFT Shop</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<script>
  // Redirect to login if wallet not connected
  if (localStorage.getItem("walletConnected") !== "true") {
    window.location.href = "/login";
  }
</script>

<!-- Optional Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand" href="/dashboard">üèÜ Sports DApp</a>
    
    <div class="ms-auto d-flex align-items-center gap-3">
      <p id="walletAddress" class="mb-0 text-success small fw-bold"></p>
      <button class="btn btn-outline-danger btn-sm" onclick="logout()">üö™ Logout</button>
    </div>
  </div>
</nav>


<body class="bg-light">
  <div class="container mt-5">
    <h2 class="text-center mb-4"> NFT Shop</h2>

    <div class="row">
      <% nfts.forEach(nft => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img 
  data-uri="<%= nft.uri %>" 
  class="card-img-top" 
  style="max-height: 250px; width: 100%; object-fit: contain;" 
  alt="NFT image" 
  onerror="this.style.display='none'" 
/>

           <div class="card-body">
              <h5 class="card-title"><%= nft.name %></h5>
              <p class="card-text"><%= nft.description %></p>
              <% if (nft.priceETH > 0) { %>
                <button class="btn btn-warning w-100" onclick="buyWithETH('<%= nft.uri %>', '<%= nft.description %>')">
                  Buy for <%= nft.priceETH %> ETH
                </button>
              <% } else if (nft.priceSPT > 0) { %>
                <button class="btn btn-info w-100" onclick="buyWithSPT('<%= nft.uri %>', <%= nft.priceSPT %>, '<%= nft.description %>')">
                  Buy for <%= nft.priceSPT %> SPT
                </button>
              <% } else { %>
                <button class="btn btn-success w-100" onclick="claimFreeNFT('<%= nft.uri %>', '<%= nft.description %>')">
                  üéÅ Claim for Free
                </button>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/ethers@5.7.2/dist/ethers.umd.min.js"></script>
<script src="/js/nft_shop.js"></script>

  <script>
    function logout() {
      localStorage.removeItem("walletConnected");
      localStorage.removeItem("userAddress");
      window.location.href = "/login";
    }
  </script>
  
</body>
</html>