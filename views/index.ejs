<script>
  function showCenterDetails(hit) {
  document.getElementById("centerTitle").textContent = hit.name;

  const id = hit.objectID || hit.name.replace(/\s+/g, "_");

  const content = `
    <p><strong>Address:</strong> ${hit.address}</p>
    <p><strong>Booking Fee:</strong> ${hit.bookingFee || '0.001'} ETH</p>
    <p><strong>Total Fee:</strong> ${hit.totalFee || '0.002'} ETH</p>
    <p><strong>Coach:</strong> ${hit.coach?.name || 'N/A'} ‚Äì ${hit.coach?.expertise || 'N/A'}</p>
    <p><strong>Rating:</strong> ‚≠ê ${hit.rating || 'N/A'}</p>

    <hr>
    <div class="row">
      <!-- ETH Booking -->
      <div class="col-md-6">
        <h6>üí≥ Book with ETH</h6>
        <form onsubmit="return bookSession(event, this)"
              data-center-name="${hit.name}"
              data-sport="${hit.sport || 'General'}"
              data-center-id="${id}"
              data-booking-fee="${hit.bookingFee || '0.001'}">
          <input type="number" class="form-control mb-2" step="0.001"
                 id="fee${id}" value="${hit.bookingFee || '0.001'}"
                 min="${hit.bookingFee || '0.001'}" required>
          <small class="text-muted">Min: ${hit.bookingFee || '0.001'} ETH</small>
          <button class="btn btn-success mt-2 w-100">Pay & Book</button>
          <p id="bookingMsg${id}" class="text-info mt-2"></p>
        </form>
      </div>

      <!-- Token Booking -->
      <div class="col-md-6">
        <h6>ü™ô Book with SPT Token</h6>
        <form onsubmit="return bookWithToken(event, this)"
              data-center-name="${hit.name}"
              data-sport="${hit.sport || 'General'}"
              data-center-id="${id}"
              data-booking-fee="${hit.bookingFee || '0.001'}">
          <input type="number" class="form-control mb-2" step="0.01"
                 id="tokenFee${id}" value="${hit.bookingFee || '0.001'}"
                 min="${hit.bookingFee || '0.001'}" required>
          <small class="text-muted">Min: ${hit.bookingFee || '0.001'} SPT</small>
          <button class="btn btn-primary mt-2 w-100">Pay with Token</button>
          <p id="tokenBookingMsg${id}" class="text-info mt-2"></p>
        </form>
      </div>
    </div>

    <hr>
    <h6>üìù Reviews</h6>
    <ul id="reviewList${id}"></ul>
    <form onsubmit="return addReview(event, '${hit.name}', '${id}')">
      <input type="text" class="form-control mb-2" placeholder="Your review" id="reviewMessage${id}" required>
      <input type="number" class="form-control mb-2" placeholder="Rating (1‚Äì5)" min="1" max="5" id="reviewRating${id}" required>
      <button class="btn btn-warning">Submit Review</button>
      <p id="reviewMsg${id}" class="text-info mt-2"></p>
    </form>
  `;

  document.getElementById("centerDetailsContent").innerHTML = content;

  // Load existing reviews (if any)
  loadReviews(hit.name, id);

  // Show the modal
  const modal = new bootstrap.Modal(document.getElementById("centerDetailsModal"));
  modal.show();
}

</script>
<script>
  const searchClient = algoliasearch(
    'PF4IXNO2X1',                // üîÅ Replace with your Algolia App ID
    '182c34187aaf24fa017076c604efed04'      // üîÅ Replace with your Search-Only API Key
  );

  const search = instantsearch({
    indexName: 'sports-centers',  // üîÅ Replace with your actual Algolia index name
    searchClient,
  });

  search.addWidgets([
    instantsearch.widgets.searchBox({
      container: '#algolia-searchbox',
      placeholder: 'Search by sport, coach, or center name...'
    }),

    instantsearch.widgets.hits({
  container: '#algolia-hits',
  templates: {
    item(hit) {
      return `
      <div class="col-12 col-md-4 col-lg-4 mb-4 d-flex">
        <div class="card w-100 h-100 shadow-sm p-3 flex-column justify-content-between" style="cursor: pointer;" onclick='showCenterDetailsFromHit(${JSON.stringify({
          name: hit.name,
          address: hit.address,
          rating: hit.rating,
          bookingFee: hit.bookingFee || '',
          totalFee: hit.totalFee || '',
          coach: hit.coach || {},
          acceptsToken: hit.acceptsToken || false,
          services: hit.services || [],
          reviews: hit.reviews || []
        })})'>
          <h5 class="card-title mb-2">${hit.name}</h5>
          <p class="mb-1"><strong>Location:</strong> ${hit.address}</p>
          <p class="mb-0"><strong>Rating:</strong> ‚≠ê ${hit.rating}</p>
        </div></div>
      `;
    }
  }
})

  ]);

  search.start();
</script>
