  </div>

  <!-- Token Booking -->
  <div class="col-md-6">
    <h6>ğŸª™ Book with SPT Token</h6>
    <form onsubmit="return bookWithToken(event, this)"
          data-center-name="<%= center.name %>"
          data-sport="<%= sportOnly %>"
          data-center-id="<%= center.id %>"
          data-booking-fee="<%= center.bookingFee %>">
      <input type="number" class="form-control mb-2" step="0.01"
